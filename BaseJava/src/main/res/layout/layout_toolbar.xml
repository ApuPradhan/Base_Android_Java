<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:contentInsetStart="0dp"
    android:orientation="vertical"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp"
    android:id="@+id/tbToolBarXML">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnBackXML"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_toolbar_back_30"
            android:elevation="6dp"
            android:padding="3dp" />

        <ImageView
            android:id="@+id/imgLogoXML"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btnBackXML"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTitleXML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgLogoXML"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:textFontWeight="3"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>